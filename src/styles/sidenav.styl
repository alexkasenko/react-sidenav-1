.sidenav {
    position: relative;
    top: 0;
    bottom: 0;
    left: 0;
    z-index: 1006;
    width: 64px;
    min-width 64px;
    background: #FFFFFF;
    box-shadow: 1px 0 20px -1px rgba(153,153,153,0.6);
    transition: all 0.2s ease-in-out;
    height: 100%;
}

.sub-menu-open {
  display: block;
}

.sub-menu-close {
  display: none;
}

.level-1 {

  .sub-menu-open {
    display: block;
  }

  .sub-menu-close {
      display: none;
  }

}
