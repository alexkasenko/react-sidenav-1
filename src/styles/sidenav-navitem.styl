.sidenav-nav > .sidenav-navitem {
    clear: both;
    position: relative;

    &.highlighted > .navitem {
        cursor: default;
    }

    &.selected > .navitem {
        border-left: 5px #2078E4 solid;

        path:last-child {
            fill: #2078E4;
        }
            
    }

    .navitem {
        border-left: 5px #F1F1F1 solid;

         .navicon > i {
            font-size: 20px;
        }
    }

    &:hover > .navitem::after {
        background: #f8f8f9;
        opacity: 1;
    }

    &.highlighted > .navitem::after,
    &:hover.highlighted > .navitem::after {
        background:#f8f8f9;
        opacity: 1;
    }

    &.highlighted.expanded > .navitem::after,
    &:hover.highlighted.expanded > .navitem::after {
        background: #f8f8f9;
        opacity: 1;
    }

    &.highlighted.selected.expanded > .navitem::after,
    &:hover.highlighted.selected.expanded > .navitem::after {
        background: #f8f8f9;
        opacity: 1;
    }

    &:hover > .navitem .navicon,
    &.highlighted > .navitem .navicon {
        opacity: 1;
    }

    &:hover > .navitem .navicon,
    &:hover > .navitem .navtext,
    &.highlighted > .navitem .navicon,
    &.highlighted > .navitem .navtext {
        color: #09091A;
        > * {
            color: #09091A;
        }
    }

    > .navitem {
        position: relative;
        display: block;
        line-height: 50px;
        height: 50px;
        white-space: nowrap;
        text-decoration: none;
        color: #fff;
        font-size: 14px;
        cursor: pointer;

        &:focus {
            outline: 0;
        }

        // Background layer
        &::after {
            content: '';
            position: absolute;
            width: 100%;
            top: 0;
            bottom: 0;
            left: 0;
            background: #fff;
            opacity: 0;
            z-index: -1;
        }
    }

    > .navitem .navicon,
    > .navitem .navtext {
        color: #09091A;
        font-size: 16px;
        > * {
            color: #09091A;
        }
    }

    > .navitem .navicon {
        display: flex;
        justify-content: center;
        align-items: center;
        float: left;
        width: 50px;
        height: 50px;
        margin-right: -6px;
        background-repeat: no-repeat;
        background-position: center center;
        background-color: transparent;
        opacity: .85;
        line-height: 50px;
    }

    > .navitem .navicon + .navtext {
        display: none;
    }
}
