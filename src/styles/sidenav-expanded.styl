@-moz-document url-prefix() {
   .sidenav.expanded {
    overflow-y: auto!important;
    }
}

.sidenav.expanded {
    width: 300px;
    min-width: 300px;
    box-shadow: 1px 0 20px -1px #9999;
    overflow-y: hidden;
    overflow-x: hidden;

     &::-webkit-scrollbar-track {
       -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
       border-radius: 10px;
       background-color: #F5F5F5;
     }

    &::-webkit-scrollbar {
      width: 4px;
      height: 4px;
      background-color: #F5F5F5;
    }

    &::-webkit-scrollbar-thumb {
      border-radius: 10px;
      -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3);
      background-color: #c1c1c1;
    }
    
    &:hover {
        overflow-y: overlay;
    }

    .sidenav-nav > .sidenav-navitem {
        .navicon {
            display: flex;
            justify-content: center;
            align-items: center;
        }    
    }

    .sidenav-nav > .sidenav-navitem {
        .navicon + .navtext {
            display: inline-block;
            white-space: nowrap;
        }
    }

    .sidenav-nav > .sidenav-navitem {
        &.expandable > .navitem {
            cursor: pointer;
        }
    }

    .sidenav-subnav {
        position: static;
        border: none;
        float: left;
        clear: both;
        width: 100%;
        background: transparent;
        overflow: hidden;
        box-shadow: none;
    }

    .sidenav-nav > .sidenav-navitem.expanded .sidenav-subnav {
        display: block;
    }
    .sidenav-subnav {
        display: none;
    }

    .sidenav-subnav > .sidenav-subnavitem {
      position: relative;
    }
    .sidenav-subnav > .sidenav-subnavitem::before {
      content: " ";
      width: 100%;
      height: 28px;
      position: absolute;
      top: 0;
      z-index: -1;
    }
    .sidenav-subnav > .sidenav-subnavitem:first-child {
      display: none;
    }
    .sidenav-subnav > .sidenav-subnavitem {
      &.selected > .navitem {
        color: #2078E4;
      
        path:last-child {
          fill: #2078E4 !important;
        }
      }

      > .navitem {
          display: flex;
          color: #09091A;
          padding: 7px 14px 7px 20px;
          line-height: 28px;
          font-size: 14px;
          white-space: nowrap;
          background: #F8F8F9;
          outline: none;
      }
    }
}

.subnav-1, .subchild-1 {
  .selectedSubWrapper {
    color: #2078E4;

    path:last-child {
      fill: #2078E4 !important;
    }

    i {
      color: #2078E4 !important;
    }
  }

  .navitem {
    display: flex;
    background: #f8f8f9;
    padding-left: 46px;
    height: 50px;
    align-items: center;
    cursor: pointer;
    
    .navicon {
    margin-right: 5px;
    width: 24px;

    > i {
        color: #666 !important;
        font-size: 14px !important;
      }
    }

    &:focus {
        outline: none;    
    }
  }
}

.subnav-2, .subchild-2 {
  .navitem {
    padding: 0px 15px 0px 56px;  
  }
}

.subnav-3, .subchild-3 {
  .navitem {
    padding: 0px 15px 0px 84px;
  }
}
