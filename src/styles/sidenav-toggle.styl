.toggle-wrapper {
    width: 100%;
    height: 50px;

    &:hover {
     background: #f8f8f9;
     opacity: 1;   

     path:last-child {
        fill: #09091A;
        opacity: 0.6;   
        }
    }
}

.sidenav-toggle {
    display: flex;
    align-items: center;
    position: relative;
    float: left;
    height: 50px;
    padding: 0 0 0 10px;
    margin: 0;
    background-color: transparent;
    background-image: none;
    border: 0;
    border-radius: 0;
    cursor: pointer;
    margin-right: -6px;
    
    path:last-child {
        fill: #82828b;
    }
    
    &:focus {
        outline: none;
    }
}
